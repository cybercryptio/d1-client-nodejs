{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "declaration": true,
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"],
  "typedocOptions": {
    "entryPoints": "src/index.ts",
    "out": "documentation/api",
    "disableSources": true,
    "cleanOutputDir": true,
    "plugin": "typedoc-plugin-markdown",
    "githubPages": false,
    "namedAnchors": true
  }
}
